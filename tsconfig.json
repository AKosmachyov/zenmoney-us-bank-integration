{
    "compilerOptions": {
        "noEmit": true,
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "rewriteRelativeImportExtensions": true,
        "erasableSyntaxOnly": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "incremental": true,
        "types": ["node"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
